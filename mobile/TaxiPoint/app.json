{
  "expo": {
    "name": "TaxiPoint",
    "slug": "TaxiPoint",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "taxipoint",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "permissions": [
      "android.permission.ACCESS_FINE_LOCATION",
      "android.permission.ACCESS_COARSE_LOCATION",
      "ios.permission.LOCATION_WHEN_IN_USE"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TaxiPoint needs your location to show nearby taxi ranks and incidents",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TaxiPoint needs your location to show nearby taxi ranks and incidents",
        "NSSpeechRecognitionUsageDescription": "TaxiPoint needs speech recognition for voice search",
        "NSMicrophoneUsageDescription": "TaxiPoint needs microphone access for voice search"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.mbongenimhlanga.TaxiPoint"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-voice/voice",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8bbdaafa-6e29-4b8a-95c7-a10eb963a9fc"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/8bbdaafa-6e29-4b8a-95c7-a10eb963a9fc"
    }
  }
}